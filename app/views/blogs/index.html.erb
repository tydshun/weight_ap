<div class="mypage">
  <div class="left-mypage">
    <div class="left-my-hight">
      <div class="my-profile-img">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar %>
          <% else %>
          <img src="/assets/IMG_9232.JPG">
        <% end %>
        
      </div>
      <%# ニックネームを表示 %>
      <div class="nickname-border">
        <p><%= @user.nickname %></p>
      </div>
    </div>

    <%# メニュー欄 %>
    <div class="left-my-low">
      <ul>
        <div class="li-border">
          <%# プロフィール編集 %>
          <%= link_to edit_user_path(@user)  do%>
            <li class="profile-btn">Profile</li>
          <% end %>

          <%= link_to blogs_path do%>
            <li class="calendar-btn">Calendar</li>
          <% end %>
          
          <%= link_to weights_path do %>
            <li class="graph-btn">Graph</li>
          <% end %>
        </div>
      </ul>
    </div>
  </div>
  
  <%# ーーーCalendarページーーー %>
  <div class="right-mypage">
    <div class="calendar-index">
      <div class="top-title">
        <div class="title">My Calendar</div>
        <div id="notice"><%= notice %></div>
      </div>
      
      <%# ーーーCalendar投稿ページに遷移ーーー %>
      <div class="new-path">
        <%= link_to 'Write a Diary', new_blog_path %>
      </div>
      
      <div class="calendar-field">
        <%= month_calendar events: @blogs do |date, blogs| %>
          <%= date.day %>

          <% blogs.each do |blog| %>
            <div>
              <%= link_to blog.title, blog %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

